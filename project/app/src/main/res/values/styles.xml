<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2c7cff</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="llmain">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="allbatchll" parent="llmain">
        <item name="android:weightSum">5</item>
    </style>
    <style name="batchwisell" parent="llmain">
        <item name="android:weightSum">6</item>
    </style>
    <style name="contactusll" parent="llmain">
        <item name="android:weightSum">7</item>
    </style>
    <style name="coursetablell" parent="llmain">
        <item name="android:weightSum">1</item>
    </style>
    <style name="homepagell" parent="llmain">
        <item name="android:weightSum">8</item>
    </style>
    <style name="mainll" parent="llmain">
        <item name="android:weightSum">3</item>
    </style>
    <style name="staffemailll" parent="llmain">
        <item name="android:weightSum">9</item>
    </style>
    <style name="textview">

        <item name= "android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">#3c1591</item>
    </style>

    <style name="tablelayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.10</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:stretchColumns">*</item>

    </style>

    <style name="tabletextview">
        <item name="android:layout_width">0dip</item>
        <item name=" android:layout_height">wrap_content</item>

        <item name=" android:layout_marginBottom">1dp</item>
        <item name=" android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name=" android:background">#FFF</item>
        <item name=" android:gravity">left</item>

        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name=" android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>

        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>

    </style>
    <style name="tablelayout_for_timetable_and_ws" parent="tablelayout">
        <item name="android:layout_weight">0.20</item>
    </style>
    <style name="tabletextview_for_timetable_and_ws" parent="tabletextview">
        <item name="android:layout_weight">2</item>
    </style>

</resources>
